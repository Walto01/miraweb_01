32<%- include("../includes/head.ejs") %>
  <%- include('../includes/header.ejs') %>



    <div id="fullpage" class="fullpage-default">
      <div class="section animated-row" data-section="slide03">
        <div class="section-inner">
          <div class="about-section">
            <div class="row justify-content-center">
              <div class="col-lg-8 wide-col-laptop">
                <div class="row">
                  <div class="col-md-6">

                    <form class="row g-3" action="nuevosAfiliados" method="POST">
                      <div class="col-md-6">
                        <label for="inputNombre" class="form-label">Nombre</label>
                        <input type="text" name="Nombre" required class="form-control" id="inputNombre">
                      </div>
                      <div class="col-md-6">
                        <label for="inputApellido" class="form-label">Apellido</label>
                        <input type="text" name="Apellido" required class="form-control" id="inputApellido">
                      </div>
                      <div class="col-md-6">
                        <label for="inputEdad" class="form-label">Edad</label>
                        <input type="text" name="Edad" required class="form-control" id="inputEdad">
                      </div>
                      <div class="col-md-6">
                        <label for="inputDocumento" class="form-label">Número de Documento</label>
                        <input type="text" name="Documento" required class="form-control" id="inputDocumento">
                      </div>
                      <div class="col-md-6">
                        <label for="inputTeléfono" class="form-label">Teléfono</label>
                        <input type="tel" name="Telefono" required class="form-control" id="inputTeléfono">
                      </div>
                      <div class="col-md-6">
                        <label for="inputDirección" class="form-label">Dirección</label>
                        <input type="text" name="Direccion" required class="form-control" id="inputDirección">
                      </div>
                      <div class="col-md-6">
                        <label for="inputProfesión" class="form-label">Profesión</label>
                        <input type="text" name="Profesion" required class="form-control" id="inputProfesión">
                      </div>
                      <div class="col-md-6">
                        <label for="rol">Comité</label>
                        <select name="Comite" required id="rol" class="form-control">
                          <option style="color: black ;" value=""></option>
                          <option style="color: black ;" value="medioAmbiente">Medio ambiente</option>
                          <option style="color: black ;" value="recreoDeporte">Recreodeporte</option>
                          <option style="color: black ;" value="educación">Educación</option>
                          <option style="color: black ;" value="infraestructura">Infraestructura</option>
                          <option style="color: black ;" value="salud">Salud</option>
                          <option style="color: black ;" value="cultura">Cultura</option>
                        </select>
                      </div>
                      <div class="col-md-12">
                        <p><textarea name="Comentario" rows="5" cols="100"
                            class="form-control">Comentario: </textarea></p>
                      </div>

                      <div class="row mb-3">
                        <label for="ejemplo_archivo_1" class="col-sm-4 col-form-label">Adjuntar Firma Opcional</label>
                        <div class="col-sm-10">
                          <input name="Firma" type="file" class="form-control" id="ejemplo_archivo_1">
                        </div>
                      </div>

                      <div class="col-12">
                        <label for="rol" class="form-label">Rol de quien registra</label>
                        <p></p>
                        <select name="Registra" required id="rol" class="form-control">
                          <option style="color: black ;" value="vacio"></option>
                          <option style="color: black ;" value="admin">Admin</option>
                          <option style="color: black ;" value="Presidenta">Presidenta</option>
                          <option style="color: black ;" value="Secretaria">Secretaria</option>
                        </select>
                      </div>

                      <div class="col-12">
                        <button onclick="dato();" type="submit" class="btn btn-primary">Registrar</button>
                      </div>
                    </form>

                    
                    </div>
                    <div class="col-md-6">
                      <figure class="about-img animate" data-animate="fadeInUp"><img
                              src="resources/img/galery/circle.3.0.jpg" class="rounded" alt=""></figure>
                    </div>







              </div>
            </div>
          </div>
        </div>
      </div>

      




      <%- include("../includes/footer.ejs") %>
      <!-- Iniciar alerta -->
    
    <% if(typeof alert !="undefined" ) { %>
      <script>
        Swal.fire({
          title: '<%= alertTitle  %>',
          text: '<%= alertMessage %>',
          icon: '<%= alertIcon %>',
          showConfirmButton: '<%= showConfirmButton %>',
          timer: 2500
        }).then(() => {
          window.location = '/<%= ruta %>'
        })
      </script>
    <% } %>
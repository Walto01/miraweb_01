<%- include('../includes/head.ejs') %>
    <%- include('../includes/header.ejs') %>

        <div id="fullpage" class="fullpage-default my-5">

            <div class="section animated-row" data-section="slide03">
                <div class="section-inner">
                    <div class="about-section">
                        <div class="row justify-content-center">
                            <div class="col-lg-8 wide-col-laptop">
                                <div class="row">
                                    <div class="col-md-6">

                                        <form class="row g-3 my-5" action="registro" method="POST">

                                            <div class="col-md-6">
                                                <label for="inputNombre" class="form-label">Nombre</label>
                                                <input name="nombre" required type="text" class="form-control" id="inputNombre">
                                            </div>
                                            <div class="col-md-6">
                                                <label for="inputApellido" class="form-label">Apellido</label>
                                                <input name="apellido" required type="text" class="form-control"
                                                    id="inputApellido">
                                            </div>
                                            <div class="col-md-6">
                                                <label for="inputNombre" class="form-label">Usuario</label>
                                                <input name="usuario" required type="text" class="form-control"
                                                    id="inputUsuario">
                                            </div>
                                            <div class="col-md-6">
                                                <label for="inputPassword4" class="form-label">Contrase√±a</label>
                                                <input name="passw" required type="password" class="form-control"
                                                    id="inputPassword4">
                                            </div>
                                            <div class="col-12">
                                                <label for="rol" class="form-label">Rol</label>
                                                <select name="rol" required id="rol" class="form-control">
                                                    <option style="color: black;" value="vacio"></option>
                                                    <option style="color: black;" value="admin">Admin</option>
                                                    <option style="color: black;" value="Presidenta">Presidenta</option>
                                                    <option style="color: black;" value="Secretaria">Secretaria</option>
                                                    <option style="color: black;" value="Tesorero">Tesorero</option>
                                                    <option style="color: black;" value="Fiscal">Fiscal</option>
                                                </select>
                                            </div>

                                            <div class="col-12">
                                                <button onclick="dato();" type="submit"
                                                    class="btn btn-primary">Registrar</button>
                                            </div>

                                            <div class="col-12">
                                                <a href="/" class="btn-cancel">Cancelar</a>
                                            </div>
                                        </form>

                                    </div>
                                    <div class="col-md-6 my-5">
                                        <figure class="about-img animate" data-animate="fadeInUp"><img
                                                src="resources/img/galery/circle.3.0.jpg" class="rounded" alt=""></figure>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <%- include("../includes/footer.ejs") %>
            <!-- Iniciar alerta -->
          
          <% if(typeof alert !="undefined" ) { %>
            <script>
              Swal.fire({
                title: '<%= alertTitle  %>',
                text: '<%= alertMessage %>',
                icon: '<%= alertIcon %>',
                showConfirmButton: '<%= showConfirmButton %>',
                timer: 2500
              }).then(() => {
                window.location = '/<%= ruta %>'
              })
            </script>
          <% } %>